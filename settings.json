{
    // Optimized configuration for performance.
    "files.autoSave": "off",
    "files.autoSaveDelay": 1000,
    "files.restoreUndoStack": false,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/env/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.archive.*": true,
        "**/.del.*": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },

    // Editor - general settings.
    "editor.tabSize": 4,
    "editor.fontSize": 15,
    "editor.lineHeight": 1.12,
    "editor.rulers": [0, 79],
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.detectIndentation": false,
    "editor.formatOnPaste": false,

    "window.zoomLevel": 0.4,
    "editor.codeActionsOnSave": {},
    "telemetry.telemetryLevel": "off",
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "update.mode": "manual",
    "search.followSymlinks": false,
    "search.searchOnType": false,
    "remote.autoForwardPortsSource": "hybrid",
    "makefile.configureOnOpen": false,
    "editor.accessibilitySupport": "off",
    "github.copilot.enable": {
        "*": true
    },

    "editor.formatOnSaveTimeout": 1000,
    "audioCues.enabled": "off",
    "update.enableWindowsBackgroundUpdates": false,

    // Visual effects optimization.
    "editor.smoothScrolling": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.minimap.enabled": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.largeFileOptimizations": true,

    // Tooltip optimization.
    "editor.inlineSuggest.enabled": false,
    "editor.guides.indentation": false,
    "editor.semanticHighlighting.enabled": false,
    "editor.quickSuggestions": {
        "comments": false,
        "other": true,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 100,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.hover.enabled": true,
    "editor.hover.delay": 500,
    "editor.insertSpaces": true,

    // Workbench optimization.
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#313742",
        "editor.lineHighlightBackground": "#32353dff",
        "editor.lineHighlightBorder": "#00000000",
        "editorHint.foreground": "#ff000000",
        "editorHint.border": "#00ff66"
    },
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.indent": 16,
    "workbench.editor.enablePreview": false,
    "workbench.list.smoothScrolling": false,
    "workbench.editor.wrapTabs": false,
    "workbench.sideBar.location": "right",
    "workbench.editor.openPositioning": "last",
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "atom-icons",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.closeOnFileDelete": true,

    // Explorer.
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,

    // Terminal.
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "monospace",

    // Git.
    "git.enabled": true,
    "git.autofetch": false,
    "git.autorefresh": false,
    "git.openRepositoryInParentFolders": "never",
    "git.autoRepositoryDetection": "openEditors",

    // C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, ColumnLimit: 0, Standard: Cpp11, BreakBeforeBraces: Attach, IndentWidth: 4, IndentPPDirectives: AfterHash, AccessModifierOffset: -4, AlignAfterOpenBracket: Align, AlignConsecutiveDeclarations: false, AlignConsecutiveMacros: true, AlignEscapedNewlines: Left, AlignOperands: true, AlignTrailingComments: true, AllowAllArgumentsOnNextLine: false, AllowAllConstructorInitializersOnNextLine: false, AllowAllParametersOfDeclarationOnNextLine: true, AllowShortBlocksOnASingleLine: false, AllowShortCaseLabelsOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, AllowShortIfStatementsOnASingleLine: true, AllowShortLoopsOnASingleLine: false, AlwaysBreakAfterDefinitionReturnType: None, AlwaysBreakAfterReturnType: None, AlwaysBreakBeforeMultilineStrings: false, AlwaysBreakTemplateDeclarations: true, BinPackArguments: false, BinPackParameters: false, BraceWrapping: { AfterFunction: false, AfterControlStatement: false, AfterEnum: true, AfterStruct: true, AfterClass: true, SplitEmptyFunction: true, AfterNamespace: false, AfterUnion: true, AfterExternBlock: false, BeforeCatch: false, BeforeElse: false, SplitEmptyRecord: true, SplitEmptyNamespace: true } }",
    "[c]": {
        "editor.rulers": [80]
    },
    "[cpp]": {
        "editor.rulers": [80],
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    // Python.
    "python.analysis.extraPaths": [
        "./",
        "./src/",
        "./src/apps/"
    ],
    "python.linting.enabled": false,
    "python.linting.lintOnSave": false,
    "python.analysis.indexing": false,
    "python.analysis.autoImportCompletions": false,

    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {}
    },

    // Linters.
    "ruff.organizeImports": false,
    "ruff.configuration": "file",
    "ruff.fallbackConfiguration": "{ ling-length: 79, target-version: 'py38', show-source: true, isort.lines-after-imports: 2, flake8-quotes.inline-quotes: 'single' }",
    "isort.args": [
        "--profile",
        "ruff"
    ],
    "mypy-type-checker.path": [
        "${workspaceFolder}/.venv/bin/mypy"
    ],
    "mypy-type-checker.args": [
        "--config-file=.mypy.ini"
    ],

    // Arduino.
    "arduino.useArduinoCli": true,
    "arduino.additionalUrls": [
        "/Users/vals/Documents/Arduino/libraries/"
    ],

    // DjLint.
    "djlint.ignore": ["H021"],
    "djlint.profile": "django",
    "djlint.maxLineLength": 120,

    // YAML.
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.rulers": [0]
    },

    // TypeScript.
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.rulers": [80],
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    // JavaScript.
    "javascript.preferences.importModuleSpecifierEnding": "js",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.rulers": [80],
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    // GoLang.
    "go.lintOnSave": "off",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [80, 81]
    },
    "go.toolsEnvVars": {
        "GO11MODULE": "on"
    },
    "go.lintTool": "golint",

    // JSON.
    "[json]": {
        "editor.rulers": [0]
    },

    // Markdown.
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 100,
        "editor.rulers": [100, 101]
    },

    // HTML.
    "html.autoClosingTags": false,
    "html.format.wrapLineLength": 150,
    "[html]": {
        "editor.rulers": [100, 150],
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 4
    },

    // Jinja.
    "[jinja]": {
        "editor.rulers": [80, 120, 121],
        "editor.tabSize": 4,
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    // Django-HTML.
    "[django-html]": {
        "editor.detectIndentation": false,
        "editor.rulers": [80, 120, 121],
        "editor.tabSize": 4
    },

    // SQL.
    "[sql]": {
        "editor.rulers": [0]
    },

    // CSS/SCSS.
    "[css]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 4,
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[scss]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 4
    },

    // MictoPico.
    "micropico.autoConnect": false,
    "micropico.manualComDevice": "/dev/ttyACM0",

    // Smart-tab.
    "smart-tabs.activeFirst": true,
    "smart-tabs.fixedTabs": 3,
    "smart-tabs.debounceDelay": 300,
    "smart-tabs.reactionEvent": "onedit",

    // cSpell.
    "cSpell.language": "en,uk",
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.userWords": [
        "Adafruit", "akram", "apikey", "autopep", "autopk", "countup", "endfor",
        "EXXX", "goimports", "golint", "goloop", "iban", "IMEI", "IMSI", "ipynb",
        "isort", "itercompat", "jsoniter", "modeltranslation", "mohd", "Monokai",
        "MSIN", "mypy", "onedit", "prec", "pylint", "rgex", "SHID", "sorl",
        "subclasscheck", "Swal", "venv", "WXXX"
    ],

    // Security.
    "security.workspace.trust.untrustedFiles": "open"

}